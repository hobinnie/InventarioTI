@model List<Departamento> // 

@{
    ViewData["Title"] = "Departamentos";
    Layout = null; // 
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Departamentos</title>
    <!-- CSS for Bootstrap -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/dashboard.css">
    <style>
             body {
            font-family: Arial, sans-serif;

        }

        .sidebar {
            height: 100vh;
            position: fixed;
        }

        .sidebar .nav-link {
            font-size: 1.1rem;
            padding: 15px;
            color: #ffffff;
            text-decoration: none; /* Sin subrayado */
        }

        .sidebar .nav-link:hover {
            background-color: #343a40; /* Color de fondo al pasar el mouse */
        }

        .table {
            margin-top: 20px;
        }

        .sidebar-sticky {
            position: -webkit-sticky;
            position: sticky;
            top: 0;
        }

        .table th, .table td {
            vertical-align: middle;
        }
    </style>
</head>
<body>
    

            <!-- Main Content -->
            <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2"><i class="fas fa-building"></i> Departamentos</h1>
                    <div>
                        <a class="btn btn-primary" href="@Url.Action("Crear", "Catalogo")">Crear Nuevo Departamento</a>
                    </div>
                </div>



                <!-- Search Bar -->
                <div class="input-group w-25 mb-3">
                    <input type="text" class="form-control" placeholder="Buscar...">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary" type="button">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>

                <!-- Filter Dropdown -->
                <div class="dropdown mb-3">
                    <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="filterDropdown" data-toggle="dropdown">
                        Filtrar
                    </button>
                    <div class="dropdown-menu" aria-labelledby="filterDropdown">
                        <a class="dropdown-item" href="#">Nombre</a>
                        <a class="dropdown-item" href="#">Rol</a>
                    </div>
                </div>

                <!-- Table -->
                <div class="table-responsive">
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nombre</th>
                                <th>Puesto</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var departamento in Model)
                            {
                                <tr>
                                    <td>@departamento.Id</td>
                                    <td>@departamento.nombreDepartamento</td>
                                    <td>@departamento.Puesto</td>
                                    <td>
                                        <a class="btn btn-sm btn-primary" href="@Url.Action("Editar", "Catalogo", new { id = departamento.Id })">Editar</a>
                                        <form asp-action="EliminarDepartamento" method="post" style="display:inline;">
                                            <input type="hidden" name="id" value="@departamento.Id" />
                                            <button class="btn btn-sm btn-danger" type="submit" onclick="return confirm('¿Estás seguro de que deseas eliminar este departamento?');">Eliminar</button>
                                        </form>
                                        <button class="btn btn-sm btn-warning" data-toggle="modal" data-target="#ModificarModal" data-id="@departamento.Id">Modificar</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
    </div>

    <!-- Modal for Modificar -->
    <div class="modal fade" id="ModificarModal" tabindex="-1" role="dialog" aria-labelledby="ModificarModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ModificarModalLabel">Modificar Departamento</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <!-- Aquí puedes agregar un formulario para modificar el departamento -->
                    <form method="post" action="@Url.Action("Modificar", "Catalogo")">
                        <input type="hidden" name="id" id="modalId" />
                        <div class="form-group">
                            <label for="nombre">Nombre:</label>
                            <input type="text" class="form-control" id="nombre" name="nombre" required />
                        </div>
                        <div class="form-group">
                            <label for="puesto">Puesto:</label>
                            <input type="text" class="form-control" id="puesto" name="puesto" required />
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
                            <button type="submit" class="btn btn-primary">Guardar cambios</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- JS for jQuery -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <!-- Popper.js -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <script>
        $('#ModificarModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Botón que abrió el modal
            var id = button.data('id'); // Extraer información del atributo data-* del botón
            var modal = $(this);
            modal.find('#modalId').val(id);
            // Puedes añadir más lógica aquí para cargar el resto de la información si es necesario
        });
    </script>
</body>
</html>
